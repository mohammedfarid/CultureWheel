<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_contact_us"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackGround2"
    android:orientation="vertical"
    tools:context="com.farid.mohammed.culturewheel.ContactUsActivity">
    <include
        android:id="@+id/app_bar"
        layout="@layout/app_bar" />
    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Get in Touch with Us"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Name"
            android:textStyle="bold"
            android:background="@drawable/round_ship_spot"
            android:layout_margin="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:hint="Email"
            android:textStyle="bold"
            android:background="@drawable/round_ship_spot"
            android:layout_margin="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Message"
            android:textColor="@color/colorText"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_margin="2dp"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:hint="Your Message"
            android:textStyle="bold"
            android:background="@drawable/round_ship_spot"
            android:layout_margin="2dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Send"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@drawable/round_ship_first"
            android:layout_margin="2dp"
            />
    </LinearLayout>
</LinearLayout>
